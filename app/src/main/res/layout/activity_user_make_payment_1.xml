<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#72FFC107"

    tools:context=".user_make_payment">

    <!--    <ImageView-->
    <!--        android:id="@+id/logo"-->
    <!--        android:layout_width="79dp"-->
    <!--        android:layout_height="94dp"-->
    <!--        android:paddingBottom="20dp"-->
    <!--        android:src="@drawable/destination" />-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="30dp"
        android:layout_height="450dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:shadowColor="#F4F3F1"
                android:shadowDx="3"
                android:shadowDy="3"
                android:layout_marginBottom="20dp"
                android:shadowRadius="2"
                android:textStyle="bold"
                android:textColor="#CEFF9800"
                android:text=" PAYMENT" />

            <EditText
                android:id="@+id/amt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:padding="6dp"
                android:drawablePadding="6dp"
                android:inputType="textPersonName"
                android:textColorHint="#020202"
                android:textStyle="italic"
                android:textColor="#000000"
                android:hint="Enter Your Card Number" />
            <EditText
                android:id="@+id/det"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:inputType="textPersonName"
                android:textColorHint="#020202"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_marginTop="10dp"

                android:hint="Enter Your CVV" />
            <EditText
                android:id="@+id/ed"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:inputType="textPersonName"
                android:textColorHint="#020202"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_marginTop="10dp"

                android:hint="Enter  Expiry Date" />
            <EditText
                android:id="@+id/nas"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:inputType="textPersonName"
                android:textColorHint="#020202"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_marginTop="10dp"

                android:hint="Enter Your Name" />
            <EditText
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:inputType="textPersonName"
                android:textColorHint="#020202"
                android:textStyle="italic"
                android:textColor="#000000"
                android:layout_marginTop="10dp"

                android:hint="Enter Your Amount" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#CEFF9800"

                android:text="PAY"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>